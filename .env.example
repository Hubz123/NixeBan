# --- Discord ---
BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN
LOG_LEVEL=INFO
MOD_LOG_CHANNEL_ID=0            # channel untuk audit log tindakan bot (disarankan diisi)

# --- Image phish guard ---
ENABLE_PHISH_AUTOBAN=1          # master toggle image guard (bot tetap jalankan link guard terpisah)
PHASH_DISTANCE_STRICT=4         # <= ini -> BAN
PHASH_DISTANCE_LENIENT=6        # <= ini -> QUARANTINE (timeout) jika tidak memenuhi strict
PHISH_DB_THREAD_ID=0            # id thread sumber DB pHash (disarankan pakai ini)
PHISH_DB_CHANNEL_ID=0           # atau channel id (kalau bukan thread)
PHISH_WHITELIST_ROLES=          # contoh: 123,456
DELETE_MESSAGE_DAYS=1           # saat ban, hapus riwayat pesan user (0-7)

# Anti false positive
WARMUP_SECONDS=120              # setelah start, bot hanya log (tanpa ban) selama durasi ini
BAN_COOLDOWN_SECONDS=20         # minimal jeda antar ban
BAN_CEILING_PER_10MIN=5         # maksimal ban dalam 10 menit (lebihnya jadi quarantine/log)
QUARANTINE_MINUTES=60           # durasi timeout pada mode quarantine
BAN_ONLY_NEWER_THAN_DAYS=14     # autoban hanya jika usia akun <= N hari (lebih tua -> quarantine/log)

# --- Link phish guard ---
ENABLE_LINK_AUTOMOD=1           # aktifkan link guard
LINK_AUTOBAN_ON_MATCH=0         # 1 = ban, 0 = delete+warn (direkomendasikan 0)
LINK_DB_CHANNEL_ID=0            # channel untuk pin daftar tambahan
LINK_BLACKLIST=discord-gift.com, disocrdapp.com, discordnitro.*free, steamcommnunity.com
LINK_REGEXES=(free|claim).*(nitro|gift),(airdrop|giveaway).*(wallet|seed)


# --- Name-based fallbacks (optional, recommended) ---
MOD_LOG_CHANNEL_NAME=log-botphising
PHISH_DB_CHANNEL_NAME=log-botphising
PHISH_DB_THREAD_NAME=imagephising
LINK_DB_CHANNEL_NAME=log-botphising
AUTO_CREATE_DB_THREAD=1       # bot mencoba membuat thread jika belum ada (butuh izin Create Public Threads)
